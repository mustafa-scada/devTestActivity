<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/activitybackground"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                style="@style/DevImage"
                android:src="@mipmap/outline_alternate_email_white_48dp" />

            <EditText
                android:id="@+id/email"
                style="@style/DevText"
                android:layout_width="match_parent"
                android:hint="Email Address"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container1"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="4dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image2"
                style="@style/DevImage"
                android:src="@mipmap/key_variant" />

            <EditText
                android:id="@+id/passWord"
                style="@style/DevText"
                android:layout_width="wrap_content"
                android:hint="Password"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container1"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/container2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image3"
                style="@style/DevImage"
                android:src="@mipmap/outline_lock_white_48dp" />

            <EditText
                android:id="@+id/pwAgain"
                style="@style/DevText"
                android:layout_width="wrap_content"
                android:hint="Again"
                android:singleLine="true"/>

        </LinearLayout>


        <EditText
            android:id="@+id/mobileNo"
            style="@style/DevText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/container2"
            android:layout_marginBottom="16dp"
            android:hint="Mobile Number"
            android:singleLine="true" />

        <Button
            style="@style/DevText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobileNo"
            android:text="Continue" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="Already have An Account? Sign In"
        android:textColor="@android:color/white"
        android:singleLine="true"/>


</RelativeLayout>
